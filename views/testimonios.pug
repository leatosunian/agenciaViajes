extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5= pagina  

        blockquote.text-center.mt-5 Le√© las opiniones de nuestros clientes!
        .row.testimoniales
            each testimonio in testimonios 
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        .card-body
                            blockquote.blockquote
                            p.mb-0
                                | #{testimonio.mensaje}
                            footer.blockquote-footer 
                                | #{testimonio.nombre}

        .row 
            .col-md-12
                h2.d-block.w-100.text-center Comentanos tu experiencia! 

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimonios" method="POST") 
                        .form-group 
                            label(for="nombre") Nombre  
                            input#nombre(type="text", placeholder="Ingresa tu nombre", name="nombre", class="form-control", value=nombre)    
                        .form-group 
                            label(for="correo") Correo  
                            input#correo(type="text", placeholder="Ingresa tu correo", name="correo", class="form-control", value=correo)  
                        .form-group 
                            label(for="nombre") Mensaje   
                            textarea#mensaje(name="mensaje", class="form-control", placeholder="Escribe tu mensaje", rows=3 )=mensaje
                        input.btn.btn-success.btn-block(type="submit")
                        